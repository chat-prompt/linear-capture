{
  "name": "linear-capture",
  "version": "1.2.10",
  "description": "Capture screen and create Linear issues instantly",
  "main": "dist/main/index.js",
  "author": "GPTers",
  "scripts": {
    "start": "npm run build && unset ELECTRON_RUN_AS_NODE && electron .",
    "start:clean": "pkill -f Electron || true; tccutil reset ScreenCapture com.github.Electron; rm -rf dist && npm run build && unset ELECTRON_RUN_AS_NODE && electron .",
    "dev": "tsc && node esbuild.renderer.mjs && unset ELECTRON_RUN_AS_NODE && electron .",
    "build": "tsc && node esbuild.renderer.mjs",
    "clean": "rm -rf dist release",
    "test": "vitest",
    "pack": "npm run build && electron-builder --dir",
    "pack:dev": "npm run build && electron-builder --config electron-builder.dev.js --dir",
    "pack:clean": "pkill -f 'Linear Capture' || true; pkill -f Electron || true; rm -rf dist release && npm run pack && open 'release/mac-arm64/Linear Capture.app'",
    "pack:debug": "pkill -f 'Linear Capture' || true; pkill -f Electron || true; rm -rf dist release && npm run pack && LINEAR_CAPTURE_DEBUG=1 './release/mac-arm64/Linear Capture.app/Contents/MacOS/Linear Capture'",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:all": "npm run build && electron-builder --mac --win",
    "reinstall": "./scripts/clean-reinstall.sh",
    "reinstall:quick": "./scripts/quick-reinstall.sh",
    "validate:i18n": "node scripts/validate-i18n.js",
    "translate": "node scripts/translate-i18n.js"
  },
  "build": {
    "appId": "com.gpters.linear-capture",
    "productName": "Linear Capture",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "assets/**/*",
      "locales/**/*",
      "scripts/**/*"
    ],
    "asarUnpack": [
      "node_modules/sql.js/**/*",
      "scripts/**/*"
    ],
    "protocols": [
      {
        "name": "Linear Capture",
        "schemes": [
          "linear-capture"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    },
    "afterSign": "scripts/notarize.js",
    "publish": {
      "provider": "github",
      "owner": "chat-prompt",
      "repo": "linear-capture"
    },
    "dmg": {
      "title": "Linear Capture",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "keywords": [
    "linear",
    "screenshot",
    "capture",
    "macos",
    "windows"
  ],
  "license": "MIT",
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@types/node": "^20.10.0",
    "@types/sql.js": "^1.4.9",
    "@vitest/ui": "^4.0.18",
    "electron": "^28.3.3",
    "electron-builder": "^26.4.0",
    "esbuild": "^0.27.3",
    "shx": "^0.4.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.15",
    "@linear/sdk": "^38.0.0",
    "dotenv": "^16.3.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.7.3",
    "i18next": "^25.8.0",
    "i18next-fs-backend": "^2.6.1",
    "openai": "^6.17.0",
    "sql.js": "^1.13.0",
    "tiktoken": "^1.0.22"
  }
}
