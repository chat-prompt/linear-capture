{
  "name": "linear-capture",
  "version": "1.0.0",
  "description": "Capture screen and create Linear issues instantly",
  "main": "dist/main/index.js",
  "author": "GPTers",
  "scripts": {
    "start": "npm run build && unset ELECTRON_RUN_AS_NODE && electron .",
    "dev": "tsc && npm run copy-assets && unset ELECTRON_RUN_AS_NODE && electron .",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "mkdir -p dist/renderer && cp src/renderer/*.html dist/renderer/",
    "clean": "rm -rf dist",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac"
  },
  "build": {
    "appId": "com.gpters.linear-capture",
    "productName": "Linear Capture",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      ".env"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "./entitlements.mac.plist",
      "entitlementsInherit": "./entitlements.mac.plist"
    },
    "dmg": {
      "title": "Linear Capture",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "keywords": [
    "linear",
    "screenshot",
    "capture",
    "macos"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.3.3",
    "electron-builder": "^26.4.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@aws-sdk/client-s3": "^3.470.0",
    "@google/genai": "^1.35.0",
    "@linear/sdk": "^38.0.0",
    "dotenv": "^16.3.1",
    "electron-store": "^8.1.0",
    "mac-screen-capture-permissions": "^2.1.0"
  }
}
